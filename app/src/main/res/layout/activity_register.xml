<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:weightSum="10">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerText"
        android:text="Register"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="60sp"
        android:layout_weight="0"
        android:textColor="#ffffff"
        />
    <RelativeLayout
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/registerText"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="100dp"
            android:id="@+id/usernamereg"
            android:layout_centerHorizontal="true"
            android:textColorHint="#ffffff"
            android:textAlignment="center"
            style="@style/textBorder"
            tools:ignore="NotSibling">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:hint="User Name"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/passwordreg"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/usernamereg"
            android:layout_marginLeft="100dp"

            android:layout_marginTop="100dp"
            android:textColorHint="#ffffff"
            android:textAlignment="center"
            style="@style/textBorder"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:hint="Password"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/cnf_pwd"
            style="@style/textBorder"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/passwordreg"
            android:layout_marginLeft="100dp"

            android:layout_marginTop="100dp"
            android:textColorHint="#ffffff"
            android:textAlignment="center"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:hint=" Confirm Password"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_alignTop="@id/cnf_pwd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:background="@drawable/rounded_rectangle"
            android:id="@+id/btnregister"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Login"
            android:textColor="#ffffff"
            android:id="@+id/backtologin"
            android:layout_alignTop="@id/btnregister"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </RelativeLayout>



</LinearLayout>